<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gear.asrm.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="400dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="29dp">

        <TableLayout
            android:id="@+id/outputBody"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="7dp">

            <!-- TextView width  80dp x2
                 Output   width 104dp x2 -->

            <!-- Word Body -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_body"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/tAllSensor"
                    android:textAlignment="center" />
            </TableRow>
            <!-- textView_armL, output_armL, textView_armR, output_armR -->
            <TableRow>

                <TextView
                    android:id="@+id/textView_armL"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="@string/tArmL" />

                <TextView
                    android:id="@+id/output_armL"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_armR"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="2"
                    android:text="@string/tArmR" />

                <TextView
                    android:id="@+id/output_armR"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="3"
                    android:text="" />
            </TableRow>
            <!-- textView_kneeL, output_kneeL, textView_kneeR, output_kneeR -->
            <TableRow>

                <TextView
                    android:id="@+id/textView_kneeL"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="@string/tKneeL" />

                <TextView
                    android:id="@+id/output_kneeL"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_kneeR"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="2"
                    android:text="@string/tKneeR" />

                <TextView
                    android:id="@+id/output_kneeR"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="3"
                    android:text="" />
            </TableRow>
            <!-- textView_ankleL, output_ankleL, textView_ankleR, output_ankleR -->
            <TableRow>

                <TextView
                    android:id="@+id/textView_ankleL"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="@string/tAnkleL" />

                <TextView
                    android:id="@+id/output_ankleL"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />
                <!-- *** -->
                <TextView
                    android:id="@+id/textView_ankleR"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text="@string/tAnkleR" />
                <!-- *** -->
                <TextView
                    android:id="@+id/output_ankleR"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="3"
                    android:text="" />
            </TableRow>
            <!-- textView_shinL, output_shinL, textView_shinR, output_shinR -->
            <TableRow>

                <TextView
                    android:id="@+id/textView_shinL"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="@string/tShinL" />

                <TextView
                    android:id="@+id/output_shinL"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_shinR"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="2"
                    android:text="@string/tShinR" />

                <TextView
                    android:id="@+id/output_shinR"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="3"
                    android:text="" />
            </TableRow>
            <!-- textView_angelL, output_angelR, textView_angleR, output_angleR-->
            <TableRow>

                <TextView
                    android:id="@+id/textView_angelL"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="@string/tAngleL" />

                <TextView
                    android:id="@+id/output_angleL"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_angleR"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="2"
                    android:text="@string/tAngleR" />

                <TextView
                    android:id="@+id/output_angleR"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_column="3"
                    android:text="" />
            </TableRow>
            <!-- Found -->
            <TableRow>
                <TextView
                    android:id="@+id/textView_found"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="Found:" />
                <TextView
                    android:id="@+id/output_found"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />
            </TableRow>
            <!-- UUID -->
            <TableRow>
                <TextView
                    android:id="@+id/textView_uuid"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="UUID:" />
                <TextView
                    android:id="@+id/output_uuid"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />
            </TableRow>
            <!-- Distance -->
            <TableRow>
                <TextView
                    android:id="@+id/textView_distance"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:text="Distance:" />
                <TextView
                    android:id="@+id/output_distance"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_column="1"
                    android:text="" />
            </TableRow>


        </TableLayout>


        <Button
            android:id="@+id/button_getData"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/outputBody"
            android:layout_below="@+id/outputBody"
            android:layout_marginStart="64dp"
            android:layout_marginTop="17dp"
            android:text="@string/button_getData" />

        <Button
            android:id="@+id/button_findAngle"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_getData"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/button_getData"
            android:text="@string/button_findAngle" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>

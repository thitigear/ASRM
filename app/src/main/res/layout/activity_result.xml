<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/resultConstraint"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gear.asrm.activity.ResultActivity"
    android:background="@color/BGPrimary">

    <!--android.support.v7.widget.Toolbar
        android:id="@+id/resultToolbar"
        app:title="@string/app_name"
        app:titleTextColor="@color/textSecondary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
    </android.support.v7.widget.Toolbar-->

    <RelativeLayout
        app:layout_constraintTop_toTopOf="@id/resultConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

  <!--
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="80dp"-->

<!-- Round Summary -->
        <TextView android:id="@+id/result_textView_header_Summary"
            android:text="@string/tResult_RoundSummary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textColor="#ff4646"
            android:textSize="24sp"
             />
        <TextView android:text="@string/under_header_line"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@id/result_textView_header_Summary"

            android:layout_width="200dp"
            android:layout_height="20dp"

            android:textScaleX="30"
            android:textAlignment="center"
            android:textColor="#69c7d2"/>
        <TextView android:text="@string/tResult_LeftPercent"
            android:layout_alignStart="@id/result_textView_header_Summary"
            android:layout_marginTop="70dp"

            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:textSize="20sp"
            android:textColor="#00c4db" />
        <TextView android:id="@+id/result_textView_LeftPercent"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginTop="67dp"
            android:layout_marginStart="160dp"
            android:background="#dfdfdf"/>
        <TextView android:text="@string/tResult_RightPercent"
            android:layout_alignStart="@id/result_textView_header_Summary"
            android:layout_marginTop="110dp"

            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="#00c4db"/>
        <TextView android:id="@+id/result_textView_RightPercent"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginTop="107dp"
            android:layout_marginStart="160dp"
            android:background="#dfdfdf"/>

<!-- Angle Simulation -->
        <TextView android:id="@+id/textView_header_AngleSimulation"
            android:text="@string/tResult_AngleSim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"

            android:layout_width="200dp"
            android:layout_height="30dp"
            style="@style/textView_header24"
             />
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/textView_header_AngleSimulation"
            android:layout_below="@+id/textView_header_AngleSimulation"
            android:text="@string/under_header_line"
            android:textAlignment="center"
            android:textColor="#69c7d2"
            android:textScaleX="30" />

<!-- Image View -->
        <ImageView android:id="@+id/result_imageLeft"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="210dp"
            android:background="@color/BGSecondary" />
        <ImageView android:id="@+id/result_imageRight"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="193dp"
            android:layout_marginTop="210dp"
            android:background="@color/BGSecondary" />

<!-- Status -->
        <TextView android:id="@+id/result_textView_header_Status"
            android:text="@string/tResult_Status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"

            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textColor="#ff4646"
            android:textSize="24sp" />
        <TextView android:text="@string/under_header_line"
            android:layout_marginTop="350dp"
            android:layout_alignStart="@id/result_textView_header_Status"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textScaleX="30"
            android:textAlignment="center"
            android:textColor="#69c7d2"/>
        <TextView android:id="@+id/result_textView_showStatus"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="372.5dp"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:background="#dfdfdf"
            android:textAlignment="center"
            android:textColor="#498b93"
            android:textSize="24sp" />
        <TextView android:text="@string/under_header_line"
            android:layout_marginTop="400dp"
            android:layout_alignLeft="@id/result_textView_header_Status"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textScaleX="30"
            android:textAlignment="center"
            android:textColor="#69c7d2"/>
        <Button android:id="@+id/result_button_OK"
            android:layout_marginTop="430dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/ok"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@color/buttonBackground"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
